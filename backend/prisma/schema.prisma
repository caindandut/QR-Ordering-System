generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id            Int        @id @default(autoincrement())
  email         String     @unique
  password      String
  name          String
  avatarUrl     String?
  phone         String?
  role          Role       @default(STAFF)
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  handledOrders Order[]
  token         UserToken?
}

model Table {
  id       Int     @id @default(autoincrement())
  name     String  @unique
  capacity Int
  status   String  @default("AVAILABLE")
  orders   Order[]
}

model Category {
  id      Int        @id @default(autoincrement())
  name    String
  name_jp String
  items   MenuItem[]
}

model MenuItem {
  id             Int           @id @default(autoincrement())
  name           String
  name_jp        String
  description    String?
  description_jp String?
  price          Int
  imageUrl       String
  status         String        @default("AVAILABLE")
  categoryId     Int
  category       Category      @relation(fields: [categoryId], references: [id])
  orderDetails   OrderDetail[]
}

model Order {
  id           Int           @id @default(autoincrement())
  customerName String
  status       String        @default("PENDING")
  totalAmount  Int
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  tableId      Int
  staffId      Int?
  table        Table         @relation(fields: [tableId], references: [id])
  staff        User?         @relation(fields: [staffId], references: [id])
  details      OrderDetail[]
}

model OrderDetail {
  id           Int      @id @default(autoincrement())
  quantity     Int
  priceAtOrder Int
  orderId      Int
  menuItemId   Int
  order        Order    @relation(fields: [orderId], references: [id])
  menuItem     MenuItem @relation(fields: [menuItemId], references: [id])
}

model UserToken {
  id     Int    @id @default(autoincrement())
  token  String @unique
  userId Int    @unique
  user   User   @relation(fields: [userId], references: [id])
}

enum Role {
  ADMIN
  STAFF
}
